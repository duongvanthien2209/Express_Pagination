            ul.navbar-nav.ml-auto
                li.nav-item
                    a.nav-link(href='/books') Book
                li.nav-item
                    a.nav-link(href='/transactions' class= user?(user.isAdmin?'d-none':''):'d-none') Transaction
                li.nav-item
                    a.nav-link(href='/cart') Cart
