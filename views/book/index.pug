extends ../layouts/default.pug

block content
    h1 Books
    - let index = 0

    a(href="/books/add") Thêm sách

    .container
        .row
            each book in books
                .col.sm-6.md-4
                    img.card-img-top(src= book.image)
                    .card-body
                        h4.card-title= book.title
                        p.card-text= book.description
                        .btn-group(role='group' aria-label='Basic example')
                            a.btn.btn-primary(href= `/cart/${book._id}/addBook`) Thuê
                            a.btn.btn-success(href= `/books/${book._id}/update`) Sửa
                            a.btn.btn-danger(href= `/books/${book._id}/delete`) Xóa

